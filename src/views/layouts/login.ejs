            @keyframes pulse {

                0%,
                100% {
                    opacity: 1;
                }

                50% {
                    opacity: 0.5;
                }
            }

            .animate-pulse-slow {
                animation: pulse 3s infinite;
            }

            .chess-board {
                background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><rect x="0" y="0" width="50" height="50" fill="%23374151"/><rect x="50" y="50" width="50" height="50" fill="%23374151"/><rect x="0" y="50" width="50" height="50" fill="%23212a36"/><rect x="50" y="0" width="50" height="50" fill="%23212a36"/></svg>');
                background-size: 100px 100px;
            }

            .piece-hover:hover {
                transform: translateY(-5px);
                filter: drop-shadow(0 5px 5px rgba(255, 255, 255, 0.2));
            }

            .glow-text {
                text-shadow: 0 0 8px rgba(59, 130, 246, 0.7);
            }
        </style>
    </head>

