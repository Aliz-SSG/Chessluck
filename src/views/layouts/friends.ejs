<!DOCTYPE html>
<html lang="en">
    <%- include ('../partials/messages.ejs')-%>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Friends List</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gray-900 text-gray-200 min-h-screen">

    <!-- Navbar -->
    <nav class="bg-gray-800 border-b border-gray-700 py-4 px-6">
        <div class="max-w-7xl mx-auto flex justify-between items-center">
            <div class="flex items-center space-x-2">
                <i class="fas fa-chess-queen text-blue-400 text-2xl"></i>
                <span class="text-xl font-bold text-indigo-400"><a href="/">ChessMaster</a></span>
            </div>
            <div class="flex space-x-6">
                <a href="/" class="hover:text-blue-400">Home</a>
                <form action="/game/play/<%= user.id %>" method="post" class="hover:text-blue-400 transition">
                    <button>Play</button>
                <a href="/learn" class="hover:text-blue-400">Learn</a>
                <a href="/friends" class="hover:text-blue-400">Friends</a>
            </div>
        </div>
    </nav>

    <div class="container mx-auto px-4 py-8 max-w-6xl">

        <!-- Header -->
        <header class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-bold text-indigo-400">Friends</h1>
                <p class="text-gray-400">Your social connections</p>
            </div>

            <!-- Search Form -->
            <form action="/friends/search" method="GET" class="relative">
                <input type="text" name="q" placeholder="Search users..."
                    class="bg-gray-800 border border-gray-700 rounded-lg px-4 py-2 pl-10 focus:outline-none focus:ring-2 focus:ring-indigo-500 w-64">
                <i class="fas fa-search absolute left-3 top-3 text-gray-400"></i>
            </form>
        </header>

        <!-- Friends Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <% const list = (searchResults && searchResults.length > 0) ? searchResults : (friends || []); %>
            

            <% if (list.length > 0) { %>
              <% list.forEach(user => { %>
                <div class="bg-gray-800 rounded-lg p-4 shadow-lg flex flex-col items-center text-center">
                      
                    <!-- Profile Picture Placeholder -->
                    <div class="w-16 h-16 rounded-full bg-gray-600 flex items-center justify-center text-xl font-bold text-white mb-3">
                        <i class="fas fa-user"></i>
                    </div>
  
                <!-- User Info -->
                    <p class="font-semibold text-lg"><%= user.username %></p>
                    <p class="text-gray-400 text-sm"><%= user.email %></p>
  
  <!-- Status -->
                    <div class="flex items-center mt-2">
                     <% if (user.status === "online") { %>
                        <span class="w-3 h-3 bg-green-500 rounded-full mr-2"></span>
                        <span class="text-green-500 text-sm font-medium">Online</span>
                     <% } else { %>
                        <span class="w-3 h-3 bg-gray-500 rounded-full mr-2"></span>
                        <span class="text-gray-400 text-sm font-medium">Offline</span>
                     <% } %>
                    </div>
  

                      <!-- Action Buttons -->
                      <div class="flex justify-center gap-2 mt-4">
                            <% if (currentUser.friends.includes(user._id)) { %>
                              <form action="/friends/remove/<%= user._id %>" method="POST">
                                  <button class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm">
                                      <i class="fas fa-user-minus mr-1"></i> Remove
                                  </button>
                              </form>
                              <form action="/chat/<%= user._id %>" method="GET">
                                  <button class="bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-1 rounded text-sm">
                                      <i class="fas fa-comment mr-1"></i> Message
                                  </button>
                              </form>
                          <% } else { %>
                              <form action="/friends/add/<%= user._id %>" method="POST">
                                  <button class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded text-sm">
                                      <i class="fas fa-user-plus mr-1"></i> Add Friend
                                  </button>
                              </form>
                          <% } %>
                      </div>
                  </div>
              <% }) %>
            <% } else { %>
              <p class="text-gray-400">No users found.</p>
            <% } %>
        </div>
    </div>
    
</body>
</html>
